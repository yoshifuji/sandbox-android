<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sample.voicerecognition.MainActivity">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="18dp"
        android:text="結果" />

    <TextView
        android:id="@+id/tv_odai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_result"
        android:layout_below="@+id/tv_result"
        android:layout_marginTop="60dp"
        android:text="お題" />

    <TextView
        android:id="@+id/tv_speech_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_odai"
        android:layout_below="@+id/tv_odai"
        android:layout_marginTop="30dp"
        android:text="1人目" />

    <TextView
        android:id="@+id/tv_speech_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_speech_1"
        android:layout_below="@+id/tv_speech_1"
        android:layout_marginTop="30dp"
        android:text="2人目" />

    <TextView
        android:id="@+id/tv_speech_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_speech_2"
        android:layout_below="@+id/tv_speech_2"
        android:layout_marginTop="30dp"
        android:text="3人目" />

    <TextView
        android:id="@+id/tv_speech_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_speech_3"
        android:layout_below="@+id/tv_speech_3"
        android:layout_marginTop="30dp"
        android:text="4人目" />

    <TextView
        android:id="@+id/tv_speech_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_speech_4"
        android:layout_alignStart="@+id/tv_speech_4"
        android:layout_marginTop="30dp"
        android:text="5人目" />

    <EditText
        android:id="@+id/txt_speech_odai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_odai"
        android:layout_alignBottom="@+id/tv_odai"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="7dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="-" />

    <EditText
        android:id="@+id/txt_speech_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="-"
        android:layout_alignBaseline="@+id/tv_speech_1"
        android:layout_alignBottom="@+id/tv_speech_1"
        android:layout_alignStart="@+id/txt_speech_odai" />

    <EditText
        android:id="@+id/txt_speech_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="-"
        android:layout_alignBaseline="@+id/tv_speech_2"
        android:layout_alignBottom="@+id/tv_speech_2"
        android:layout_alignStart="@+id/txt_speech_1" />

    <EditText
        android:id="@+id/txt_speech_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_speech_3"
        android:layout_alignBottom="@+id/tv_speech_3"
        android:layout_alignStart="@+id/txt_speech_2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="-" />

    <EditText
        android:id="@+id/txt_speech_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="-"
        android:layout_alignBaseline="@+id/tv_speech_4"
        android:layout_alignBottom="@+id/tv_speech_4"
        android:layout_alignStart="@+id/txt_speech_3" />

    <EditText
        android:id="@+id/txt_speech_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="-"
        android:layout_alignBaseline="@+id/tv_speech_5"
        android:layout_alignBottom="@+id/tv_speech_5"
        android:layout_alignStart="@+id/txt_speech_4" />

    <!-- Retry button -->
    <Button
        android:id="@+id/button_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="リトライ"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>