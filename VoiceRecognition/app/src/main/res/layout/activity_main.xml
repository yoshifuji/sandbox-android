<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sample.voicerecognition.MainActivity">

    <Button
        android:id="@+id/btn_odai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="お題"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btn_next" />

    <TextView
        android:id="@+id/tv_main_odai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_odai"
        android:layout_below="@+id/btn_odai"
        android:layout_marginTop="15dp"
        android:text="-" />

    <Button
        android:id="@+id/btn_rokuon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="録音"
        android:layout_below="@+id/btn_odai"
        android:layout_alignStart="@+id/btn_odai" />

    <TextView
        android:id="@+id/tv_rokuon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_below="@+id/btn_rokuon"
        android:layout_alignStart="@+id/btn_rokuon"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="次へ"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>